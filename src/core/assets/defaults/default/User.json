{
  "name": "User",
  "properties": {
    "realm": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "uiType": "select",
      "default": "user",
      "options":{
        "selectItems":[
        {
          "value": "admin",
          "label": "Administrator"
        },
        {
          "value": "user",
          "label": "User"
        }
      ]}
    },
    "password": {
      "type": "string",
      "uiType": "password",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true,
      "defaultColumn":true
    },
    "emailVerified": {"type":"boolean", "defaultColumn": true},
    "verificationToken": {"type":"string"}
  },
  "options": {
    "caseSensitiveEmail": true
  },
  "hidden": ["verificationToken","realm"],

  "methodes": ["login","logout"],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  }
}
